@page "/"
@namespace MyApplicationMud.Host.Pages
@using MyApplicationMud
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Blazor OpenIDConnect Cookie</title>
    <base href="~/" />
    <base href="/" />
    <link href="site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
</head>
<body>

    <div id="app">
        <div class="loader" aria-label="Ladebalken">
            <div>
                <div>
                    <img src="fd-logo.png" alt="logo" />
                </div>
                <div>
                    Lade
                </div>
                <div class="loader-dots">
                    <div class="dot-bricks"></div>
                </div>
            </div>
        </div>
    </div>

    <div id="blazor-error-ui">
        <div>
            Ein unerwarteter Fehler ist aufgetreten.
            <div>
                <environment include="Staging,Production">
                    Die Anwendung ist möglicherweise instabil, bis Sie die Seite neu laden.
                </environment>
                <environment include="Development">
                    Für mehr Informationen öffnen Sie die Browser-Dev-Tools.
                </environment>
            </div>
        </div>
        <div>
            <a href="" class="reload mud-button-root mud-button mud-button-filled mud-button-filled-secondary mud-button-filled-size-medium mud-ripple">Neu Laden</a>
        </div>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.webassembly.js"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    @*<script src="antiForgeryToken.js" ></script>*@
    @*    @Html.AntiForgeryToken()*@
</body>
</html>
