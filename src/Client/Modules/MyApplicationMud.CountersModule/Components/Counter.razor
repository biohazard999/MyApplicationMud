@inherits FluxorComponent
@page "/counter"
@inject IState<CounterState> State
@inject IDispatcher Dispatcher

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Counter</MudText>
<MudText Class="mb-4">Current count: @State.Value.Count</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="() => Dispatcher.Dispatch(new IncrementCounterAction())">Click me</MudButton>
