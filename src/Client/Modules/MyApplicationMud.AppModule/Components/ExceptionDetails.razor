<MudDialog>
    <DialogContent>
        <MudPaper Class="pa-16 ma-2" Elevation="3">
            <MudBlazor.MudText Typo="MudBlazor.Typo.h6">@Exception.Message</MudBlazor.MudText>
            <MudBlazor.MudMarkdown Value="@Details" />
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudBlazor.MudButton Color="MudBlazor.Color.Primary" OnClick="Close">Schließen</MudBlazor.MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    void Close() => MudDialog.Close();

    [Parameter]
    public Exception Exception { get; set; } = default!;

    public string Details => $@"```
{Exception}
```";
}
